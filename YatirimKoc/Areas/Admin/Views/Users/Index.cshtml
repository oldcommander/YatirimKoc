@model List<YatirimKoc.Application.Features.Users.Dtos.UserDto>
@{
    ViewData["Title"] = "Ekip Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="fade-in-up">
    <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 25px; margin-bottom: 30px; border-left: 5px solid var(--accent-1);">
        <div style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:20px;">
            <div>
                <h2 style="margin:0; font-weight:800; letter-spacing:-0.5px;">Sistem Kullanıcıları ve Danışmanlar</h2>
                <p style="color: var(--muted); margin: 5px 0 0 0;">Toplam @Model.Count kayıtlı kullanıcı bulunuyor.</p>
            </div>

            <a asp-action="Create" class="btn-primary">
                <i class="fa-solid fa-user-plus"></i> Yeni Danışman Ekle
            </a>
        </div>
    </div>

    <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 10px; overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; min-width:1000px;">
            <thead>
                <tr style="color: var(--muted); font-size:12px; text-transform:uppercase; border-bottom: 1px solid var(--glass-border);">
                    <th style="padding: 20px;">Kullanıcı</th>
                    <th style="padding: 20px; text-align:left;">Unvan & Yetki</th>
                    <th style="padding: 20px; text-align:left;">İletişim</th>
                    <th style="padding: 20px; text-align:left;">Durum</th>
                    <th style="padding: 20px; text-align:right;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="table-row-hover" style="border-bottom: 1px solid rgba(255,255,255,0.03);">

                        <td style="padding: 15px 20px; display:flex; align-items:center; gap:15px;">
                            <div style="width:45px; height:45px; border-radius:50%; overflow:hidden; border:2px solid var(--glass-border); flex-shrink:0;">
                                @if (!string.IsNullOrEmpty(user.ProfileImageUrl))
                                {
                                    <img src="@user.ProfileImageUrl" style="width:100%; height:100%; object-fit:cover;" />
                                }
                                else
                                {
                                    <div style="width:100%; height:100%; background:rgba(0,0,0,0.5); display:flex; align-items:center; justify-content:center; color:var(--muted);">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                }
                            </div>
                            <div>
                                <div style="font-weight:700; font-size:15px; color:#fff; margin-bottom:3px;">@user.FirstName @user.LastName</div>
                                <div style="font-size:12px; color:var(--muted);">ID: @user.Id.ToString().Substring(0, 8)...</div>
                            </div>
                        </td>

                        <td style="padding: 15px 20px;">
                            <div style="font-weight:600; font-size:14px; color:var(--accent-2); margin-bottom:5px;">
                                @(string.IsNullOrWhiteSpace(user.Title) ? "Belirtilmemiş" : user.Title)
                            </div>
                            <div>
                                @if (user.Role == "SuperAdmin")
                                {
                                    <span class="badge-custom" style="background:rgba(239, 68, 68, 0.1); color:#ef4444;">Super Admin</span>
                                }
                                else
                                {
                                    <span class="badge-custom" style="background:rgba(6, 182, 212, 0.1); color:#06b6d4;">Danışman</span>
                                }
                            </div>
                        </td>

                        <td style="padding: 15px 20px;">
                            <div style="display:flex; flex-direction:column; gap:5px; font-size:13px; color:#cbd5e1;">
                                <span><i class="fa-solid fa-envelope" style="color:var(--muted); margin-right:5px;"></i> @user.Email</span>
                                <span><i class="fa-solid fa-phone" style="color:var(--muted); margin-right:5px;"></i> @(user.Phone ?? "-")</span>
                            </div>
                        </td>

                        <td style="padding: 15px 20px;">
                            @if (user.IsActive)
                            {
                                <div class="status-pill status-active">Aktif</div>
                            }
                            else
                            {
                                <div class="status-pill status-draft">Pasif</div>
                            }
                        </td>

                        <td style="padding: 15px 20px; text-align:right;">
                            <div style="display:flex; justify-content:flex-end; gap:10px;">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="action-icon" title="Düzenle" style="color:var(--accent-2);">
                                    <i class="fa-solid fa-pen-nib"></i>
                                </a>

                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek (pasife almak) istediğinize emin misiniz?');">
                                    <button type="submit" class="action-icon" style="color:#ef4444; border:none; cursor:pointer;" title="Sil">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Ortak Badge ve Icon CSS'leri (Listings'den uyarlandı) */
    .badge-custom {
        padding: 3px 10px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 700;
        display: inline-block;
        width: fit-content;
    }

    .status-pill {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

        .status-active::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #10b981;
            border-radius: 50%;
            box-shadow: 0 0 10px #10b981;
        }

    .status-draft {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
    }

        .status-draft::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #ef4444;
            border-radius: 50%;
        }

    .action-icon {
        width: 38px;
        height: 38px;
        border-radius: 10px;
        background: rgba(255,255,255,0.03);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid var(--glass-border);
    }

        .action-icon:hover {
            background: var(--gradient-primary);
            color: #fff !important;
            transform: translateY(-3px);
            box-shadow: var(--shadow-glow);
        }

    .table-row-hover:hover {
        background: rgba(255,255,255,0.02);
    }
</style>