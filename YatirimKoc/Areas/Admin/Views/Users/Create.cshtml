@using YatirimKoc.Domain.Entities.Identity
@model YatirimKoc.Application.Features.Users.Commands.CreateUserCommand
@{
    ViewData["Title"] = "Yeni Danışman Ekle";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 style="margin:0; font-weight:800;">Yeni Danışman Ekle</h2>
            <p style="color: var(--muted); margin: 5px 0 0 0;">Sisteme yeni bir yönetici veya gayrimenkul danışmanı kaydedin.</p>
        </div>
        <a asp-action="Index" class="btn-secondary" style="text-decoration:none;">
            <i class="fa-solid fa-arrow-left"></i> Listeye Dön
        </a>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="glass-panel mb-4" style="padding: 25px; border-radius: var(--radius-lg); border-left: 5px solid var(--accent-1);">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 text-center mb-3 mb-md-0">
                    <div style="position:relative; width:130px; height:130px; margin:0 auto; border-radius:50%; border:3px solid var(--accent-1); overflow:hidden; cursor:pointer; box-shadow: var(--shadow-glow);" onclick="document.getElementById('profileImageInput').click();">
                        <img id="avatarPreview" src="/img/placeholder-avatar.jpg" onerror="this.src='https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png'" style="width:100%; height:100%; object-fit:cover;" />
                        <div style="position:absolute; bottom:0; left:0; right:0; background:rgba(0,0,0,0.6); color:#fff; font-size:12px; padding:6px 0; transition:0.3s;" class="upload-text">
                            <i class="fa-solid fa-camera"></i> Fotoğraf Seç
                        </div>
                    </div>
                    <input asp-for="ProfileImage" type="file" id="profileImageInput" style="display:none;" accept="image/*" onchange="previewAvatar(event)" />
                </div>

                <div class="col-lg-10 col-md-9">
                    <h5 style="color: var(--accent-1); font-weight: 700; margin-bottom: 20px; font-size:15px; border-bottom:1px solid var(--glass-border); padding-bottom:10px;">Temel Bilgiler ve Oturum</h5>

                    <div class="row g-3">
                        <div class="col-md-3">
                            <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Ad</label>
                            <input asp-for="FirstName" class="input-dark" placeholder="Ahmet" required />
                        </div>
                        <div class="col-md-3">
                            <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Soyad</label>
                            <input asp-for="LastName" class="input-dark" placeholder="Yılmaz" required />
                        </div>
                        <div class="col-md-6">
                            <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">E-Posta (Giriş İçin)</label>
                            <input asp-for="Email" type="email" class="input-dark" placeholder="ornek@yatirimkoc.com" required />
                        </div>

                        <div class="col-md-6">
                            <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Güçlü Şifre Belirleyin</label>
                            <input asp-for="Password" id="passwordInput" type="password" class="input-dark" placeholder="Şifrenizi yazmaya başlayın..." required />

                            <div class="mt-2 p-2" style="background: rgba(0,0,0,0.2); border-radius: 8px; border: 1px solid var(--glass-border);">
                                <ul id="passwordRules" style="list-style: none; padding: 0; margin: 0; font-size: 11px; color: var(--muted); display: grid; grid-template-columns: 1fr 1fr; gap: 4px;">
                                    <li id="rule-length"><i class="fa-solid fa-circle-xmark text-danger me-1 transition-all"></i> En az 8 karakter</li>
                                    <li id="rule-upper"><i class="fa-solid fa-circle-xmark text-danger me-1 transition-all"></i> 1 büyük harf</li>
                                    <li id="rule-lower"><i class="fa-solid fa-circle-xmark text-danger me-1 transition-all"></i> 1 küçük harf</li>
                                    <li id="rule-number"><i class="fa-solid fa-circle-xmark text-danger me-1 transition-all"></i> 1 rakam</li>
                                    <li id="rule-special" style="grid-column: span 2;"><i class="fa-solid fa-circle-xmark text-danger me-1 transition-all"></i> 1 özel karakter (!, *, # vb.)</li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Sistem Rolü</label>
                            <select asp-for="Role" class="input-dark" required>
                                <option value="">Seçiniz...</option>
                                <option value="@RoleConstants.Admin">Danışman (Sadece Kendi İlanları)</option>
                                <option value="@RoleConstants.SuperAdmin">Super Admin (Tam Yetki)</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="glass-panel mb-4" style="padding: 25px; border-radius: var(--radius-lg); border-left: 5px solid var(--accent-2);">
            <h5 style="color: var(--accent-2); font-weight: 700; margin-bottom: 20px; font-size:15px; border-bottom:1px solid var(--glass-border); padding-bottom:10px;">Kurumsal Profil ve İletişim Detayları</h5>

            <div class="row g-3">
                <div class="col-md-3">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Unvan</label>
                    <input asp-for="Title" class="input-dark" placeholder="Lüks Konut Uzmanı" required />
                </div>
                <div class="col-md-3">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Telefon (WhatsApp)</label>
                    <input asp-for="Phone" class="input-dark" placeholder="0555 555 5555" />
                </div>
                <div class="col-md-3">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Yetki Belgesi No</label>
                    <input asp-for="LicenseNumber" class="input-dark" placeholder="Örn: 3400123" />
                </div>
                <div class="col-md-3">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Deneyim (Yıl)</label>
                    <input asp-for="ExperienceYear" type="number" class="input-dark" placeholder="Örn: 5" />
                </div>

                <div class="col-md-6">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Uzmanlık Alanları</label>
                    <input asp-for="Specialties" class="input-dark" placeholder="Ticari, Arsa, Lüks Konut" />
                </div>
                <div class="col-md-6">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Konuşulan Diller</label>
                    <input asp-for="SpokenLanguages" class="input-dark" placeholder="İngilizce, Rusça" />
                </div>

                <div class="col-md-12">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Hakkında / Biyografi</label>
                    <textarea asp-for="Biography" class="input-dark" rows="2" placeholder="Danışman hakkında kısa bir özgeçmiş..."></textarea>
                </div>

                <div class="col-md-4">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Instagram Bağlantısı</label>
                    <div style="position:relative;">
                        <i class="fa-brands fa-instagram" style="position:absolute; left:12px; top:15px; color:var(--muted);"></i>
                        <input asp-for="InstagramUrl" class="input-dark" style="padding-left:35px;" placeholder="URL yapıştırın" />
                    </div>
                </div>
                <div class="col-md-4">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">LinkedIn Bağlantısı</label>
                    <div style="position:relative;">
                        <i class="fa-brands fa-linkedin" style="position:absolute; left:12px; top:15px; color:var(--muted);"></i>
                        <input asp-for="LinkedInUrl" class="input-dark" style="padding-left:35px;" placeholder="URL yapıştırın" />
                    </div>
                </div>
                <div class="col-md-4">
                    <label style="font-size:12px; opacity:0.8; margin-bottom:5px;">Facebook Bağlantısı</label>
                    <div style="position:relative;">
                        <i class="fa-brands fa-facebook" style="position:absolute; left:12px; top:15px; color:var(--muted);"></i>
                        <input asp-for="FacebookUrl" class="input-dark" style="padding-left:35px;" placeholder="URL yapıştırın" />
                    </div>
                </div>
            </div>
        </div>

        <div class="text-end mb-5">
            <button type="submit" id="submitBtn" class="btn-primary" style="padding: 12px 40px; font-size: 16px; opacity:0.5; cursor:not-allowed;" disabled>
                <i class="fa-solid fa-save me-2"></i> Danışmanı Ekle
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Profil Fotoğrafı Canlı Önizleme
        function previewAvatar(event) {
            const reader = new FileReader();
            reader.onload = function(){
                document.getElementById('avatarPreview').src = reader.result;
            };
            if(event.target.files[0]){
                reader.readAsDataURL(event.target.files[0]);
            }
        }

        // Anlık Güçlü Şifre Kontrolü Javascript Mantığı
        document.getElementById('passwordInput').addEventListener('input', function(e) {
            const pwd = e.target.value;

            // Kuralların Regex Taramaları
            const hasLength = pwd.length >= 8;
            const hasUpper = /[A-Z]/.test(pwd);
            const hasLower = /[a-z]/.test(pwd);
            const hasNumber = /[0-9]/.test(pwd);
            const hasSpecial = /[!@@#$%^&*(),.?":{}|<>]/.test(pwd);

            // Arayüz İkon Güncelleme Fonksiyonu
            const updateRule = (ruleId, isValid) => {
                const li = document.getElementById(ruleId);
                const icon = li.querySelector('i');
                if (isValid) {
                    li.style.color = '#10b981'; // Başarılı yeşili
                    icon.className = 'fa-solid fa-circle-check text-success me-1 transition-all';
                } else {
                    li.style.color = 'var(--muted)'; // Hata / Pasif rengi
                    icon.className = 'fa-solid fa-circle-xmark text-danger me-1 transition-all';
                }
            };

            // Ekrana yansıtma
            updateRule('rule-length', hasLength);
            updateRule('rule-upper', hasUpper);
            updateRule('rule-lower', hasLower);
            updateRule('rule-number', hasNumber);
            updateRule('rule-special', hasSpecial);

            // Eğer tüm kurallar sağlanırsa kaydet butonunun kilidini aç!
            const submitBtn = document.getElementById('submitBtn');
            if (hasLength && hasUpper && hasLower && hasNumber && hasSpecial) {
                submitBtn.disabled = false;
                submitBtn.style.opacity = '1';
                submitBtn.style.cursor = 'pointer';
            } else {
                submitBtn.disabled = true;
                submitBtn.style.opacity = '0.5';
                submitBtn.style.cursor = 'not-allowed';
            }
        });
    </script>
}