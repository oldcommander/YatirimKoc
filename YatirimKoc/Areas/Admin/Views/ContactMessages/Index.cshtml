@using YatirimKoc.Domain.Enums
@model List<YatirimKoc.Application.Features.ContactMessages.Dtos.ContactMessageDto>
@{
    ViewData["Title"] = "İletişim Mesajları";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">İletişim Mesajları</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Gelen Mesajlar</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white py-3">
            <i class="fas fa-envelope me-1"></i>
            Tüm Gelen Mesajlar
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle" id="datatablesSimple">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.Status == ContactMessageStatus.Pending ? "fw-bold bg-light" : "")">
                                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div>@item.FullName</div>
                                    <small class="text-muted">@item.Email</small>
                                </td>
                                <td>@item.Subject</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case ContactMessageStatus.Pending:
                                            <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> Bekliyor</span>
                                            break;
                                        case ContactMessageStatus.Read:
                                            <span class="badge bg-info text-dark"><i class="fas fa-envelope-open"></i> Okundu</span>
                                            break;
                                        case ContactMessageStatus.Replied:
                                            <span class="badge bg-success"><i class="fas fa-check-double"></i> Cevaplandı</span>
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> İncele
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>