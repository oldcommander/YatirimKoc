@model YatirimKoc.Domain.Entities.Listings.Listing
@{
    ViewData["Title"] = "İlan Önizleme - " + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="fade-in-up">
    <div class="no-print" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 25px;">
        <a asp-action="Index" class="btn-secondary" style="text-decoration:none;">
            <i class="fa-solid fa-arrow-left"></i> Listeye Dön
        </a>
        <div style="display:flex; gap:10px;">
            <a href="#" class="btn-secondary"><i class="fa-solid fa-pen-to-square"></i> Düzenle</a>
            <button class="btn-primary" onclick="generatePDF()"><i class="fa-solid fa-file-pdf"></i> PDF İndir</button>
        </div>
    </div>

    <div id="pdfContainer" style="padding: 10px;">
        <div class="pdf-header" style="display:none; text-align:center; margin-bottom:20px; color:var(--accent-2);">
            <h2>YatırımKoç İlan Detayı</h2>
            <p style="color:#fff; font-size:14px;">@Model.Title</p>
        </div>

        <div class="form-grid" style="grid-template-columns: 1.5fr 1fr; align-items: start;">

            <div style="display:flex; flex-direction:column; gap:25px;">

                <div class="glass-panel" style="padding:15px; border-radius:var(--radius-lg);">
                    <div id="mainImageContainer" style="width:100%; height:450px; border-radius:12px; overflow:hidden; border:1px solid var(--glass-border); margin-bottom:15px;">
                        @{
                            var cover = Model.Images?.FirstOrDefault(x => x.IsCover)?.ImageUrl ?? Model.Images?.FirstOrDefault()?.ImageUrl;
                        }
                        <img id="mainView" src="@cover" style="width:100%; height:100%; object-fit:contain; background:#000;" />
                    </div>
                    <div class="gallery-scroll" style="display:flex; gap:10px; overflow-x:auto; padding-bottom:10px;">
                        @foreach (var img in Model.Images.OrderByDescending(x => x.IsCover))
                        {
                            <img src="@img.ImageUrl"
                                 onclick="document.getElementById('mainView').src = this.src"
                                 style="width:80px; height:60px; object-fit:cover; border-radius:8px; cursor:pointer; border:1px solid var(--glass-border); transition:var(--transition);"
                                 onmouseover="this.style.borderColor='var(--accent-2)'" />
                        }
                    </div>
                </div>

                <div class="glass-panel" style="padding:30px; border-radius:var(--radius-lg);">
                    <h3 style="color:var(--accent-2); margin-bottom:15px; border-bottom:1px solid var(--glass-border); padding-bottom:10px;">İlan Açıklaması</h3>
                    <div style="color:#cbd5e1; line-height:1.8; white-space: pre-line;">
                        @Model.Description
                    </div>
                </div>
            </div>

            <div style="display:flex; flex-direction:column; gap:25px;">

                <div class="glass-panel" style="padding:25px; border-radius:var(--radius-lg); border-top: 4px solid var(--accent-2);">
                    <h1 style="margin:0; font-size:28px; font-weight:800; color:#fff;">@Model.Price.ToString("N0") @Model.Currency</h1>
                    <p style="color:var(--muted); margin-top:10px; font-size:16px;">
                        <i class="fa-solid fa-location-dot" style="color:var(--accent-1);"></i> @Model.City / @Model.District @(!string.IsNullOrEmpty(Model.Neighborhood) ? " / " + Model.Neighborhood : "")
                    </p>
                    <div style="display:flex; gap:10px; margin-top:20px;">
                        <span class="badge-custom">@Model.TransactionType?.Name</span>
                        <span class="badge-custom" style="background:rgba(6, 182, 212, 0.1); color:var(--accent-2);">@Model.PropertyType?.Name</span>
                    </div>
                </div>

                <div class="glass-panel" style="padding:20px; border-radius:var(--radius-lg);">
                    <h4 style="margin-bottom:15px; color:var(--muted); text-transform:uppercase; font-size:12px; letter-spacing:1px;">Teknik Özellikler</h4>
                    <div class="feature-list">
                        @foreach (var fv in Model.FeatureValues.OrderBy(x => x.Feature.Name))
                        {
                            <div class="feature-item">
                                <span class="f-label">@fv.Feature.Name</span>
                                <span class="f-value">@fv.Value</span>
                            </div>
                        }
                    </div>
                </div>

                <div class="glass-panel" style="padding:15px; border-radius:var(--radius-lg);">
                    <h4 style="margin-bottom:10px; color:var(--muted); font-size:12px; text-transform:uppercase;">Konum Bilgisi</h4>
                    <div id="previewMap" style="height:250px; border-radius:10px; border:1px solid var(--glass-border);"></div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    .badge-custom {
        background: rgba(139, 92, 246, 0.1);
        color: var(--accent-1);
        padding: 6px 15px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 700;
    }

    .feature-list {
        display: flex;
        flex-direction: column;
    }

    .feature-item {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        font-size: 14px;
    }

    .f-label {
        color: var(--muted);
    }

    .f-value {
        color: #fff;
        font-weight: 600;
    }

    #previewMap.leaflet-container {
        background: #050810 !important;
    }

    /* PDF Oluşturulurken Aktif Olacak Sınıflar (Sayfayı PDF'e hazırlar) */
    .pdf-mode {
        background-color: #0f172a !important; /* PDF arkaplanını sayfa rengiyle aynı yap */
        padding: 20px !important;
    }

        .pdf-mode .glass-panel {
            page-break-inside: avoid; /* Kutuların ortadan ikiye bölünmesini engeller */
            break-inside: avoid;
        }

        .pdf-mode .gallery-scroll {
            display: none !important; /* Alt taraftaki küçük resim galerisini PDF'te gizle (scrollbar çirkin durmasın) */
        }

        .pdf-mode .pdf-header {
            display: block !important; /* PDF'in en üstüne şık bir başlık ekle */
        }

    /* Geleneksel Print CSS'ini tamamen kaldırdık, artık kullanmıyoruz. */
</style>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // --- HARİTA BAŞLATMA ---
            var latStr = "@Model.Latitude".replace(',', '.');
            var lngStr = "@Model.Longitude".replace(',', '.');

            var lat = parseFloat(latStr);
            var lng = parseFloat(lngStr);

            if (lat > 1000) { lat = lat / 10000; }
            if (lng > 1000) { lng = lng / 10000; }
            if (lat === 0 || isNaN(lat)) { lat = 39.0; lng = 35.0; }

            var map = L.map('previewMap').setView([lat, lng], 13);
            L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
                attribution: '&copy; CARTO'
            }).addTo(map);
            L.marker([lat, lng]).addTo(map);

            var resizeObserver = new ResizeObserver(function() { map.invalidateSize(); });
            resizeObserver.observe(document.getElementById('previewMap'));
            setTimeout(function() { map.invalidateSize(); }, 500);
        });

        // --- YENİ: PDF OLUŞTURMA FONKSİYONU ---
        function generatePDF() {
            // PDF'i oluşturacağımız ana div'i seç
            var element = document.getElementById('pdfContainer');

            // PDF'e özel stilleri uygulamak için class ekle
            element.classList.add('pdf-mode');

            // İlan başlığından güvenli bir dosya adı oluştur
            var rawTitle = "@Model.Title";
            var fileName = rawTitle.replace(/[^a-z0-9ğüşöçıİĞÜŞÖÇ]/gi, '_').toLowerCase() + "_ilan_detayi.pdf";

            // html2pdf ayarları
            var opt = {
                margin:       [10, 10, 10, 10], // Üst, Sol, Alt, Sağ boşluklar
                filename:     fileName,
                image:        { type: 'jpeg', quality: 1.0 },
                html2canvas:  {
                    scale: 2, // Görüntü kalitesini artırır
                    useCORS: true, // Harita ve resimlerin PDF'e sorunsuz gelmesini sağlar
                    backgroundColor: '#0f172a' // Arka plan rengini karanlık temaya uyarla
                },
                jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };

            // PDF'i oluştur, indir ve işlem bitince pdf-mode class'ını kaldır
            html2pdf().set(opt).from(element).save().then(function() {
                element.classList.remove('pdf-mode');
            });
        }
    </script>
}