@using YatirimKoc.Application.Common.Models
@model PaginatedList<YatirimKoc.Domain.Entities.Listings.Listing>
@{
    ViewData["Title"] = "İlan Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="fade-in-up">
    <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 25px; margin-bottom: 30px; border-left: 5px solid var(--accent-1);">
        <div style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:20px;">
            <div>
                <h2 style="margin:0; font-weight:800; letter-spacing:-0.5px;">İlan Portföyü</h2>
                <p style="color: var(--muted); margin: 5px 0 0 0;">Toplam @Model.Items.Count ilan listeleniyor.</p>
            </div>
            <a asp-action="CreateWizard" class="btn-primary">
                <i class="fa-solid fa-plus"></i> Yeni İlan Ekle
            </a>
        </div>

        <hr style="border-color: var(--glass-border); margin: 20px 0;" />

        <form method="get" asp-action="Index" class="form-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; align-items: end;">
            <div class="form-group">
                <label style="font-size:12px; opacity:0.7;">Kelime ile Ara</label>
                <input type="text" name="searchTerm" value="@Context.Request.Query["searchTerm"]" class="input-dark" placeholder="Başlıkta ara..." />
            </div>
            <div class="form-group">
                <label style="font-size:12px; opacity:0.7;">İşlem Tipi</label>
                <select name="transactionTypeId" class="input-dark" asp-items="@(new SelectList(ViewBag.TransactionTypes, "Id", "Name", Context.Request.Query["transactionTypeId"]))">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div class="form-group">
                <label style="font-size:12px; opacity:0.7;">Emlak Tipi</label>
                <select name="propertyTypeId" class="input-dark" asp-items="@(new SelectList(ViewBag.PropertyTypes, "Id", "Name", Context.Request.Query["propertyTypeId"]))">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn-primary" style="width:100%; justify-content:center; background:var(--accent-2);">
                    <i class="fa-solid fa-filter"></i> Filtrele
                </button>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn-secondary" style="width:100%; justify-content:center; text-decoration:none; display:flex; align-items:center;">
                    <i class="fa-solid fa-rotate-left"></i> Sıfırla
                </a>
            </div>
        </form>
    </div>

    <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 10px; overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; min-width:1000px;">
            <thead>
                <tr style="color: var(--muted); font-size:12px; text-transform:uppercase; border-bottom: 1px solid var(--glass-border);">
                    <th style="padding: 20px;">Görsel</th>
                    <th style="padding: 20px;">İlan Detayı</th>
                    <th style="padding: 20px; text-align:left;">Kategori</th>
                    <th style="padding: 20px; text-align:left;">Fiyat</th>
                    <th style="padding: 20px; text-align:left;">Konum</th>
                    <th style="padding: 20px; text-align:left;">Durum</th>
                    <th style="padding: 20px; text-align:right;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="table-row-hover" style="border-bottom: 1px solid rgba(255,255,255,0.03);" id="row-@item.Id">
                        <td style="padding: 15px 20px; width:120px;">
                            <div style="position:relative; width:100px; height:70px; border-radius:10px; overflow:hidden; border:1px solid var(--glass-border);">
                                @{
                                    var coverImage = item.Images?.FirstOrDefault(x => x.IsCover)?.ImageUrl ?? item.Images?.FirstOrDefault()?.ImageUrl ?? "";
                                }
                                @if (!string.IsNullOrEmpty(coverImage))
                                {
                                    <img src="@coverImage" style="width:100%; height:100%; object-fit:cover;" />
                                }
                                else
                                {
                                    <div style="width:100%; height:100%; background:rgba(0,0,0,0.5); display:flex; align-items:center; justify-content:center;">
                                        <i class="fa-solid fa-image-slash" style="opacity:0.3;"></i>
                                    </div>
                                }
                            </div>
                        </td>
                        <td style="padding: 15px 20px;">
                            <div style="font-weight:600; font-size:15px; color:#fff; margin-bottom:5px;">@item.Title</div>
                            <div style="font-size:12px; color:var(--muted);"><i class="fa-regular fa-calendar-days"></i> @item.CreatedAt.ToString("dd.MM.yyyy")</div>
                        </td>
                        <td style="padding: 15px 20px;">
                            <div style="display:flex; flex-direction:column; gap:5px;">
                                <span class="badge-custom">@item.TransactionType?.Name</span>
                                <span class="badge-custom" style="background:rgba(6, 182, 212, 0.1); color:var(--accent-2);">@item.PropertyType?.Name</span>
                            </div>
                        </td>
                        <td style="padding: 15px 20px;">
                            <div style="font-weight:800; color:var(--accent-2); font-size:16px;">@item.Price.ToString("N0") @item.Currency</div>
                        </td>
                        <td style="padding: 15px 20px; color:#cbd5e1; font-size:13px;">
                            <i class="fa-solid fa-location-dot" style="margin-right:5px; color:var(--accent-1);"></i> @item.City, @item.District
                        </td>
                        <td style="padding: 15px 20px;">
                            @if (item.IsPublished)
                            {
                                <div class="status-pill status-active">Yayında</div>
                            }
                            else
                            {
                                <div class="status-pill status-draft">Taslak</div>
                            }
                        </td>
                        <td style="padding: 15px 20px; text-align:right;">
                            <div style="display:flex; justify-content:flex-end; gap:10px;">
                                <a href="#" class="action-icon" title="Düzenle"><i class="fa-solid fa-pen-nib"></i></a>
                                <a asp-action="Preview" asp-route-id="@item.Id" class="action-icon" title="Önizleme" style="color:var(--accent-2);">
                                    <i class="fa-solid fa-arrow-up-right-from-square"></i>
                                </a>
                                <button type="button" class="action-icon btn-delete-trigger"
                                        style="color:#ef4444; border:none; cursor:pointer;"
                                        title="Sil"
                                        onclick="openDeleteModal('@item.Id', '@Html.Raw(item.Title.Replace("'", "\\'"))', '@coverImage', '@item.Price.ToString("N0") @item.Currency')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                <div style="display:flex; justify-content:space-between; align-items:center; margin-top:25px; padding:0 10px;">
                    <div style="color:var(--muted); font-size:14px;">
                        Toplam <b>@Model.TotalCount</b> ilandan @((Model.PageNumber - 1) * 10 + 1) - @Math.Min(Model.PageNumber * 10, Model.TotalCount) arası gösteriliyor.
                    </div>

                    <div style="display:flex; gap:10px;">
                        @{
                            var prevDisabled = !Model.HasPreviousPage ? "disabled-btn" : "";
                            var nextDisabled = !Model.HasNextPage ? "disabled-btn" : "";
                        }

                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-searchTerm="@ViewData["CurrentSearch"]"
                           asp-route-transactionTypeId="@ViewData["CurrentTrans"]"
                           asp-route-propertyTypeId="@ViewData["CurrentProp"]"
                           class="action-icon @prevDisabled" style="width:auto; padding:0 15px; gap:8px;">
                            <i class="fa-solid fa-chevron-left"></i> Önceki
                        </a>

                        <div class="action-icon active-page" style="border-color:var(--accent-1); color:var(--accent-1); cursor:default;">
                            @Model.PageNumber
                        </div>

                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-searchTerm="@ViewData["CurrentSearch"]"
                           asp-route-transactionTypeId="@ViewData["CurrentTrans"]"
                           asp-route-propertyTypeId="@ViewData["CurrentProp"]"
                           class="action-icon @nextDisabled" style="width:auto; padding:0 15px; gap:8px;">
                            Sonraki <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </tbody>
        </table>
    </div>
</div>

<div id="deleteModal" class="modal-overlay" style="display:none; align-items:center; justify-content:center;">
    <div class="modal-box glass-panel" style="width: 450px; padding: 30px; border-radius: 20px; border: 1px solid rgba(239, 68, 68, 0.3); text-align:center; transform: scale(0.9); opacity: 0; transition: all 0.3s ease;">

        <div style="width: 70px; height: 70px; background: rgba(239, 68, 68, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px auto; color: #ef4444; font-size: 30px; box-shadow: 0 0 20px rgba(239, 68, 68, 0.2);">
            <i class="fa-solid fa-triangle-exclamation"></i>
        </div>

        <h3 style="color:#fff; margin-bottom:10px; font-weight:700;">İlanı Silmek Üzeresiniz!</h3>
        <p style="color:var(--muted); font-size:14px; margin-bottom:20px;">Bu işlem geri alınamaz. İlan verileri ve fotoğrafları tamamen silinecektir.</p>

        <div style="background: rgba(0,0,0,0.3); border: 1px solid var(--glass-border); border-radius: 12px; padding: 15px; display: flex; align-items: center; gap: 15px; margin-bottom: 25px; text-align: left;">
            <div style="width: 60px; height: 60px; border-radius: 8px; overflow: hidden; background:#1e293b; flex-shrink: 0;">
                <img id="modalDeleteImg" src="" style="width: 100%; height: 100%; object-fit: cover; display: none;" />
                <i id="modalDeleteIcon" class="fa-solid fa-image-slash" style="display:flex; align-items:center; justify-content:center; height:100%; opacity:0.3; color:#fff;"></i>
            </div>
            <div style="overflow: hidden;">
                <div id="modalDeleteTitle" style="color: #fff; font-weight: 600; font-size: 14px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; margin-bottom: 5px;"></div>
                <div id="modalDeletePrice" style="color: var(--accent-2); font-weight: 700; font-size: 13px;"></div>
            </div>
        </div>

        <div id="deleteProgressContainer" style="display:none; margin-bottom: 25px;">
            <div style="color: #ef4444; font-size: 13px; font-weight: 600; margin-bottom: 8px; letter-spacing: 1px; text-transform: uppercase;">Siliniyor...</div>
            <div style="width: 100%; height: 6px; background: rgba(255,255,255,0.05); border-radius: 10px; overflow: hidden;">
                <div id="deleteProgressBar" style="width: 0%; height: 100%; background: linear-gradient(90deg, #ef4444, #b91c1c); transition: width 0.3s ease;"></div>
            </div>
        </div>

        <div id="deleteModalButtons" style="display:flex; justify-content:center; gap:15px;">
            <button class="btn-secondary" onclick="closeDeleteModal()" style="flex: 1;">Vazgeç</button>
            <button class="btn-primary" onclick="executeDelete()" style="flex: 1; background: linear-gradient(135deg, #ef4444, #b91c1c); box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);">
                <i class="fa-solid fa-trash"></i> Evet, Sil
            </button>
        </div>

        <input type="hidden" id="deleteListingId" />
    </div>
</div>

<style>
    /* Tablo ve rozet CSS leri (Aynı kalıyor) */
    .badge-custom {
        background: rgba(139, 92, 246, 0.1);
        color: var(--accent-1);
        padding: 3px 10px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 700;
        display: inline-block;
        width: fit-content;
    }

    .status-pill {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

        .status-active::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #10b981;
            border-radius: 50%;
            box-shadow: 0 0 10px #10b981;
        }

    .status-draft {
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
    }

        .status-draft::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #f59e0b;
            border-radius: 50%;
        }

    .action-icon {
        width: 38px;
        height: 38px;
        border-radius: 10px;
        background: rgba(255,255,255,0.03);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid var(--glass-border);
    }

        .action-icon:hover {
            background: var(--gradient-primary);
            color: #fff;
            transform: translateY(-3px);
            box-shadow: var(--shadow-glow);
        }

    .table-row-hover:hover {
        background: rgba(255,255,255,0.02);
    }

    .disabled-btn {
        opacity: 0.3;
        pointer-events: none;
    }

    .active-page {
        background: rgba(139, 92, 246, 0.1) !important;
        font-weight: 700;
    }

    /* Modal CSS */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
        z-index: 9999;
    }

        .modal-overlay.active {
            display: flex !important;
        }

            .modal-overlay.active .modal-box {
                transform: scale(1) !important;
                opacity: 1 !important;
            }

    /* Silinen Satır Animasyonu (Satır yavaşça yok olur) */
    .row-deleting {
        animation: fadeOutRow 0.5s forwards;
    }

    @@keyframes fadeOutRow {
        0% {
            opacity: 1;
            transform: translateX(0);
            background: rgba(239, 68, 68, 0.1);
        }

        100% {
            opacity: 0;
            transform: translateX(-20px);
            height: 0;
            padding: 0;
            border: none;
        }
    }
</style>

@section Scripts {
    <script>
        // Modal Elementleri
        const deleteModal = document.getElementById('deleteModal');
        const modalBox = deleteModal.querySelector('.modal-box');
        const imgEl = document.getElementById('modalDeleteImg');
        const iconEl = document.getElementById('modalDeleteIcon');
        const titleEl = document.getElementById('modalDeleteTitle');
        const priceEl = document.getElementById('modalDeletePrice');
        const idInput = document.getElementById('deleteListingId');

        const progressContainer = document.getElementById('deleteProgressContainer');
        const progressBar = document.getElementById('deleteProgressBar');
        const buttonsContainer = document.getElementById('deleteModalButtons');

        // Modal Açma Fonksiyonu
        function openDeleteModal(id, title, imgUrl, price) {
            idInput.value = id;
            titleEl.textContent = title;
            priceEl.textContent = price;

            // Görsel ayarı (Yoksa ikon göster)
            if (imgUrl && imgUrl.trim() !== '') {
                imgEl.src = imgUrl;
                imgEl.style.display = 'block';
                iconEl.style.display = 'none';
            } else {
                imgEl.style.display = 'none';
                iconEl.style.display = 'flex';
            }

            // Arayüzü sıfırla
            progressContainer.style.display = 'none';
            progressBar.style.width = '0%';
            buttonsContainer.style.display = 'flex';

            // Animasyonlu gösterim
            deleteModal.classList.add('active');
        }

        // Modal Kapatma Fonksiyonu
        function closeDeleteModal() {
            modalBox.style.transform = 'scale(0.9)';
            modalBox.style.opacity = '0';
            setTimeout(() => {
                deleteModal.classList.remove('active');
            }, 300); // animasyon süresi kadar bekle
        }

        // Silme İşlemini Tetikleme
        function executeDelete() {
            const id = idInput.value;

            // Arayüzü silme moduna geçir
            buttonsContainer.style.display = 'none';
            progressContainer.style.display = 'block';

            // Progress bar simülasyonu (3 saniye = 3000ms)
            let progress = 0;
            const interval = setInterval(() => {
                progress += Math.floor(Math.random() * 15) + 5; // Rastgele ilerleme
                if (progress > 90) progress = 90; // API yanıtına kadar %90'da beklet
                progressBar.style.width = progress + '%';
            }, 300);

            // AJAX ile backend'e istek at (Anti-Forgery Token güvenlik için önemlidir)
            $.ajax({
                url: '/Admin/Listings/Delete',
                type: 'POST',
                data: { id: id },
                // Eğer sayfanızda [ValidateAntiForgeryToken] varsa aşağıdaki satırı aktif edin ve data'ya token'ı ekleyin.
                // headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                success: function (result) {
                    clearInterval(interval);

                    if (result.success) {
                        progressBar.style.width = '100%'; // Progress barı doldur

                        setTimeout(() => {
                            closeDeleteModal();

                            // Tablodan ilgili satırı animasyonla sil
                            const row = document.getElementById('row-' + id);
                            if (row) {
                                row.classList.add('row-deleting');
                                setTimeout(() => row.remove(), 500); // animasyon bitince DOM'dan uçur
                            }
                        }, 500); // %100 olduktan sonra yarım saniye beklet
                    } else {
                        alert(result.message || 'Silme işlemi başarısız oldu.');
                        closeDeleteModal();
                    }
                },
                error: function () {
                    clearInterval(interval);
                    alert('Sunucu ile bağlantı kurulurken bir hata oluştu.');
                    closeDeleteModal();
                }
            });
        }
    </script>
}