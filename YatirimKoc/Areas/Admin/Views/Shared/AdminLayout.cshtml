<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Yatırım Koç Admin</title>
    
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    
    <style>
        :root {
            --bg-color: #0f172a;
            --panel-bg: rgba(30, 41, 59, 0.7);
            --glass-border: rgba(255, 255, 255, 0.05);
            --accent-1: #8b5cf6;
            --accent-2: #38bdf8;
            --muted: #94a3b8;
            --radius-lg: 16px;
            --shadow-glow: 0 0 20px rgba(139, 92, 246, 0.3);
            --gradient-primary: linear-gradient(135deg, #8b5cf6, #3b82f6);
        }
        
        body { font-family: 'Inter', sans-serif; background-color: var(--bg-color); color: #f8fafc; }
        .glass-panel { background: var(--panel-bg); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); border: 1px solid var(--glass-border); box-shadow: 0 4px 30px rgba(0,0,0,0.1); }
        .fade-in-up { animation: fadeInUp 0.6s ease-out forwards; }
        @@keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        
        /* Layout CSS Ezmeleri */
        .sb-topnav { background: rgba(15, 23, 42, 0.8) !important; backdrop-filter: blur(10px); border-bottom: 1px solid var(--glass-border); }
        .sb-sidenav { background: rgba(15, 23, 42, 0.95) !important; border-right: 1px solid var(--glass-border); }
        .nav-link { color: #cbd5e1 !important; transition: all 0.3s; margin: 4px 10px; border-radius: 8px; }
        .nav-link:hover, .nav-link.active { background: rgba(255,255,255,0.05); color: #fff !important; transform: translateX(5px); }
        .sb-nav-link-icon { color: var(--accent-1) !important; }
        
        .btn-primary { background: var(--gradient-primary); border: none; color: #fff; padding: 10px 20px; border-radius: 8px; font-weight: 600; cursor: pointer; display: inline-flex; align-items: center; transition: all 0.3s; text-decoration:none; }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: var(--shadow-glow); color: #fff; }
        .btn-secondary { background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); color: #fff; padding: 10px 20px; border-radius: 8px; font-weight: 600; cursor: pointer; display: inline-flex; align-items: center; transition: all 0.3s; text-decoration:none; }
        .btn-secondary:hover { background: rgba(255,255,255,0.1); color: #fff; }
        .input-dark { width: 100%; background: rgba(0,0,0,0.2); border: 1px solid var(--glass-border); color: #fff; padding: 12px 15px; border-radius: 8px; transition: all 0.3s; }
        .input-dark:focus { outline: none; border-color: var(--accent-1); background: rgba(0,0,0,0.4); box-shadow: inset 0 0 0 1px var(--accent-1); }
        
        /* Özel Logout Modal Css */
        .logout-modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.7); backdrop-filter: blur(5px); z-index: 10000; display: none; align-items: center; justify-content: center; }
        .logout-modal-overlay.active { display: flex !important; }
        .logout-modal-box { width: 400px; padding: 35px 30px; border-radius: 20px; text-align: center; transform: scale(0.9); opacity: 0; transition: all 0.3s ease; border-top: 5px solid #f59e0b; }
        .logout-modal-overlay.active .logout-modal-box { transform: scale(1); opacity: 1; }
    </style>
</head>
<body class="sb-nav-fixed">
    
    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <a class="navbar-brand ps-3 fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index" style="letter-spacing: 1px;">
            <i class="fa-solid fa-chart-pie me-2" style="color:var(--accent-1)"></i>YATIRIM<span style="color:var(--accent-2)">KOÇ</span>
        </a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars text-white"></i></button>
        
        <div class="d-none d-md-inline-block ms-auto me-0 me-md-3 my-2 my-md-0"></div>
        
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/images/default-avatar.png" alt="Admin" style="width:32px; height:32px; border-radius:50%; object-fit:cover; margin-right:8px; border:2px solid var(--accent-1);" onerror="this.src='https://cdn-icons-png.flaticon.com/512/3135/3135715.png'" />
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow-lg" aria-labelledby="navbarDropdown" style="background:var(--panel-bg); backdrop-filter:blur(10px); border:1px solid var(--glass-border); border-radius:12px;">
                    <li><a class="dropdown-item py-2" href="#!"><i class="fas fa-user-circle me-2 text-secondary"></i> Profilim</a></li>
                    <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="SiteSettings" asp-action="Index"><i class="fas fa-cog me-2 text-secondary"></i> Ayarlar</a></li>
                    <li><hr class="dropdown-divider" style="border-color:var(--glass-border);" /></li>
                    <li><button type="button" class="dropdown-item text-danger fw-bold py-2" onclick="openLogoutModal()"><i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap</button></li>
                </ul>
            </li>
        </ul>
    </nav>
    
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav mt-4">
                        <div class="sb-sidenav-menu-heading text-uppercase" style="font-size:11px; letter-spacing:1px; color:var(--muted); margin-left:10px;">Ana Menü</div>
                        
                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        
                        <div class="sb-sidenav-menu-heading text-uppercase mt-3" style="font-size:11px; letter-spacing:1px; color:var(--muted); margin-left:10px;">Operasyonlar</div>

                        <a class="nav-link" asp-area="Admin" asp-controller="Reservations" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-check"></i></div>
                            Randevular
                        </a>

                        <a class="nav-link" asp-area="Admin" asp-controller="ContactMessages" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-envelope"></i></div>
                            İletişim Mesajları
                        </a>
                        
                        <a class="nav-link" asp-area="Admin" asp-controller="Listings" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-building"></i></div>
                            İlan Yönetimi
                        </a>

                        <div class="sb-sidenav-menu-heading text-uppercase mt-3" style="font-size:11px; letter-spacing:1px; color:var(--muted); margin-left:10px;">Sistem Yönetimi</div>
                        
                        <a class="nav-link" asp-area="Admin" asp-controller="MailTemplates" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-file-invoice"></i></div>
                            Mail Şablonları
                        </a>

                        <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Kullanıcılar
                        </a>
                        
                        <a class="nav-link" asp-area="Admin" asp-controller="SiteSettings" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-cogs"></i></div>
                            Site Ayarları
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer" style="background: rgba(0,0,0,0.2); border-top: 1px solid var(--glass-border);">
                    <div class="small text-muted">Giriş Yapılan Hesap:</div>
                    <span style="color:var(--accent-2); font-weight:600;">Sistem Yöneticisi</span>
                </div>
            </nav>
        </div>
        
        <div id="layoutSidenav_content">
            <main class="p-4">
                @RenderBody()
            </main>
            <footer class="py-4 mt-auto" style="background: rgba(15, 23, 42, 0.8); border-top: 1px solid var(--glass-border);">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Yatırım Koç @DateTime.Now.Year</div>
                        <div>
                            <a href="#" style="color:var(--muted); text-decoration:none; margin-right:10px;">Gizlilik Politikası</a>
                            &middot;
                            <a href="#" style="color:var(--muted); text-decoration:none; margin-left:10px;">Şartlar ve Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <div id="customLogoutModal" class="logout-modal-overlay">
        <div class="logout-modal-box glass-panel">
            <div style="width: 80px; height: 80px; background: rgba(245, 158, 11, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px auto; color: #f59e0b; font-size: 35px; box-shadow: 0 0 20px rgba(245, 158, 11, 0.2);">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
            </div>
            
            <h3 style="color:#fff; margin-bottom:10px; font-weight:700;">Çıkış Yapıyorsunuz</h3>
            <p style="color:var(--muted); font-size:15px; margin-bottom:25px;">Oturumunuzu kapatmak istediğinize emin misiniz?</p>
            
            <div style="display:flex; justify-content:center; gap:15px;">
                <button type="button" class="btn-secondary" onclick="closeLogoutModal()" style="flex: 1;">Vazgeç</button>
                <form asp-area="Admin" asp-controller="Auth" asp-action="Logout" method="post" style="flex: 1; margin:0;">
                    <button type="submit" class="btn-primary" style="width:100%; justify-content:center; background: linear-gradient(135deg, #f59e0b, #d97706); box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);">
                        Evet, Çıkış Yap
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        const logoutModalOverlay = document.getElementById('customLogoutModal');
        
        function openLogoutModal() {
            logoutModalOverlay.style.display = 'flex';
            setTimeout(() => logoutModalOverlay.classList.add('active'), 10);
        }
        
        function closeLogoutModal() {
            const logoutBox = logoutModalOverlay.querySelector('.logout-modal-box');
            logoutBox.style.transform = 'scale(0.9)';
            logoutBox.style.opacity = '0';
            setTimeout(() => {
                logoutModalOverlay.classList.remove('active');
                logoutModalOverlay.style.display = 'none';
                
                setTimeout(() => {
                    logoutBox.style.transform = '';
                    logoutBox.style.opacity = '';
                }, 50);
            }, 300);
        }

        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>