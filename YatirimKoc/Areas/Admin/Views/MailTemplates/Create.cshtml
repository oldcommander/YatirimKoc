@model YatirimKoc.Application.Features.MailTemplates.Commands.CreateMailTemplateCommand
@{
    ViewData["Title"] = "Yeni Mail Şablonu";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="fade-in-up">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 25px;">
        <h2 style="margin:0; font-weight:800; letter-spacing:-0.5px; color:#fff;">Yeni Şablon Oluştur</h2>
        <a asp-action="Index" class="btn-secondary" style="text-decoration:none;">
            <i class="fas fa-arrow-left me-2"></i> İptal
        </a>
    </div>

    <form asp-action="Create" method="post">
        <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 30px; border-top: 5px solid var(--accent-1);">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label class="form-label" style="color:var(--muted); font-size:13px; font-weight:600; text-transform:uppercase;">Şablon Kodu</label>
                    <input asp-for="Code" class="input-dark" placeholder="Örn: OTP_Verification, ReservationApproved" required />
                    <span asp-validation-for="Code" class="text-danger" style="font-size:12px;"></span>
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-label" style="color:var(--muted); font-size:13px; font-weight:600; text-transform:uppercase;">Durum</label>
                    <div style="padding-top:10px;">
                        <label class="d-flex align-items-center" style="cursor:pointer; color:#fff;">
                            <input asp-for="IsActive" type="checkbox" style="width:20px; height:20px; accent-color:var(--accent-1); margin-right:10px;" checked />
                            Aktif (Kullanıma Hazır)
                        </label>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label" style="color:var(--muted); font-size:13px; font-weight:600; text-transform:uppercase;">Mail Konusu (Subject)</label>
                <input asp-for="Subject" class="input-dark" placeholder="Örn: Yatırım Koç - Onay Kodunuz" required />
                <span asp-validation-for="Subject" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="mb-4">
                <label class="form-label" style="color:var(--muted); font-size:13px; font-weight:600; text-transform:uppercase; display:flex; justify-content:space-between;">
                    Mail İçeriği (HTML)
                    <span style="color:var(--accent-2); font-size:11px; text-transform:none;">HTML tagları desteklenir. Değişkenleri {{DegiskenAdi}} şeklinde kullanabilirsiniz.</span>
                </label>
                <textarea asp-for="BodyHtml" class="input-dark" rows="12" style="font-family:monospace; line-height:1.6;" placeholder="<h1>Merhaba {{Name}},</h1><p>Şifreniz: {{OTP}}</p>" required></textarea>
                <span asp-validation-for="BodyHtml" class="text-danger" style="font-size:12px;"></span>
            </div>

            <div class="text-end pt-3 border-top border-secondary">
                <button type="submit" class="btn-primary px-5 py-3" style="font-size:16px;">
                    <i class="fa-solid fa-save me-2"></i> Şablonu Kaydet
                </button>
            </div>
        </div>
    </form>
</div>