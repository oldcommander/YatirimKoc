@using YatirimKoc.Domain.Enums
@using YatirimKoc.Application.Common.Models
@model PaginatedList<YatirimKoc.Application.Features.Reservations.Dtos.ReservationDto>
@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="fade-in-up">
    <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 25px; margin-bottom: 30px; border-left: 5px solid var(--accent-1);">
        <div style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:20px;">
            <div>
                <h2 style="margin:0; font-weight:800; letter-spacing:-0.5px;">Randevu Talepleri</h2>
                <p style="color: var(--muted); margin: 5px 0 0 0;">Toplam @Model.TotalCount randevu listeleniyor.</p>
            </div>
        </div>

        <hr style="border-color: var(--glass-border); margin: 20px 0;" />

        <form method="get" asp-action="Index" class="form-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; align-items: end;">
            <div class="form-group">
                <label style="font-size:12px; opacity:0.7;">İsim veya E-Posta Ara</label>
                <input type="text" name="searchTerm" value="@ViewData["CurrentSearch"]" class="input-dark" placeholder="Kelime yazın..." />
            </div>

            <div class="form-group">
                <label style="font-size:12px; opacity:0.7;">Durum Filtresi</label>
                <select name="statusId" class="input-dark">
                    <option value="">Tümü</option>
                    <option value="1" selected="@(ViewData["CurrentStatus"]?.ToString() == "1")">Bekliyor</option>
                    <option value="2" selected="@(ViewData["CurrentStatus"]?.ToString() == "2")">Onaylandı</option>
                    <option value="3" selected="@(ViewData["CurrentStatus"]?.ToString() == "3")">Reddedildi</option>
                    <option value="4" selected="@(ViewData["CurrentStatus"]?.ToString() == "4")">İptal Edildi</option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn-primary" style="width:100%; justify-content:center; background:var(--accent-2);">
                    <i class="fa-solid fa-filter"></i> Filtrele
                </button>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn-secondary" style="width:100%; justify-content:center; text-decoration:none; display:flex; align-items:center;">
                    <i class="fa-solid fa-rotate-left"></i> Sıfırla
                </a>
            </div>
        </form>
    </div>

    <div class="glass-panel" style="border-radius: var(--radius-lg); padding: 10px; overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; min-width:1000px;">
            <thead>
                <tr style="color: var(--muted); font-size:12px; text-transform:uppercase; border-bottom: 1px solid var(--glass-border);">
                    <th style="padding: 20px; text-align:left;">Danışan Bilgisi</th>
                    <th style="padding: 20px; text-align:left;">Randevu Tarihi & Saati</th>
                    <th style="padding: 20px; text-align:left;">Talep Tarihi</th>
                    <th style="padding: 20px; text-align:left;">Durum</th>
                    <th style="padding: 20px; text-align:right;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="table-row-hover" style="border-bottom: 1px solid rgba(255,255,255,0.03);" id="row-@item.Id">
                        <td style="padding: 15px 20px;">
                            <div style="font-weight:600; font-size:15px; color:#fff; margin-bottom:5px;">@item.FullName</div>
                            <div style="font-size:12px; color:var(--muted);">
                                <i class="fa-regular fa-envelope" style="margin-right:3px;"></i> @item.Email
                            </div>
                        </td>
                        <td style="padding: 15px 20px; color:#cbd5e1; font-size:14px; font-weight:600;">
                            <i class="fa-regular fa-calendar-check" style="margin-right:5px; color:var(--accent-2);"></i>
                            @item.ReservationDate.ToString("dd.MM.yyyy") <span style="color:var(--muted); margin-left:5px;">| @item.TimeSlot</span>
                        </td>
                        <td style="padding: 15px 20px; color:var(--muted); font-size:13px;">
                            @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td style="padding: 15px 20px;">
                            @switch (item.Status)
                            {
                                case ReservationStatus.Pending:
                                    <div class="status-pill status-draft"><i class="fas fa-hourglass-half"></i> Bekliyor</div>
                                    break;
                                case ReservationStatus.Approved:
                                    <div class="status-pill status-active"><i class="fas fa-check-circle"></i> Onaylandı</div>
                                    break;
                                case ReservationStatus.Rejected:
                                    <div class="status-pill" style="background: rgba(239, 68, 68, 0.1); color: #ef4444;"><i class="fas fa-times-circle"></i> Reddedildi</div>
                                    break;
                                case ReservationStatus.Cancelled:
                                    <div class="status-pill" style="background: rgba(148, 163, 184, 0.1); color: #94a3b8;"><i class="fas fa-ban"></i> İptal Edildi</div>
                                    break;
                            }
                        </td>
                        <td style="padding: 15px 20px; text-align:right;">
                            <div style="display:flex; justify-content:flex-end; gap:10px;">
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-icon" title="Detayı İncele" style="color:var(--accent-1);">
                                    <i class="fa-solid fa-expand"></i>
                                </a>
                                <button type="button" class="action-icon btn-delete-trigger"
                                        style="color:#ef4444; border:none; cursor:pointer;"
                                        title="Sil"
                                        onclick="openDeleteModal('@item.Id', '@Html.Raw(item.FullName.Replace("'", "\\'"))', '@item.ReservationDate.ToString("dd.MM.yyyy") - @item.TimeSlot')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div style="display:flex; justify-content:space-between; align-items:center; margin-top:25px; padding:0 10px;">
            <div style="color:var(--muted); font-size:14px;">
                Toplam <b>@Model.TotalCount</b> randevudan @((Model.PageNumber - 1) * 10 + 1) - @Math.Min(Model.PageNumber * 10, Model.TotalCount) arası gösteriliyor.
            </div>

            <div style="display:flex; gap:10px;">
                @{
                    var prevDisabled = !Model.HasPreviousPage ? "disabled-btn" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled-btn" : "";
                }

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-searchTerm="@ViewData["CurrentSearch"]"
                   asp-route-statusId="@ViewData["CurrentStatus"]"
                   class="action-icon @prevDisabled" style="width:auto; padding:0 15px; gap:8px;">
                    <i class="fa-solid fa-chevron-left"></i> Önceki
                </a>

                <div class="action-icon active-page" style="border-color:var(--accent-1); color:var(--accent-1); cursor:default;">
                    @Model.PageNumber
                </div>

                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-searchTerm="@ViewData["CurrentSearch"]"
                   asp-route-statusId="@ViewData["CurrentStatus"]"
                   class="action-icon @nextDisabled" style="width:auto; padding:0 15px; gap:8px;">
                    Sonraki <i class="fa-solid fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal-overlay" style="display:none; align-items:center; justify-content:center;">
    <div class="modal-box glass-panel" style="width: 450px; padding: 30px; border-radius: 20px; border: 1px solid rgba(239, 68, 68, 0.3); text-align:center; transform: scale(0.9); opacity: 0; transition: all 0.3s ease;">

        <div style="width: 70px; height: 70px; background: rgba(239, 68, 68, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px auto; color: #ef4444; font-size: 30px; box-shadow: 0 0 20px rgba(239, 68, 68, 0.2);">
            <i class="fa-solid fa-calendar-xmark"></i>
        </div>

        <h3 style="color:#fff; margin-bottom:10px; font-weight:700;">Randevuyu Silmek Üzeresiniz!</h3>
        <p style="color:var(--muted); font-size:14px; margin-bottom:20px;">Bu işlem geri alınamaz. Randevu talebi veritabanından tamamen silinecektir.</p>

        <div style="background: rgba(0,0,0,0.3); border: 1px solid var(--glass-border); border-radius: 12px; padding: 15px; margin-bottom: 25px; text-align: left;">
            <div id="modalDeleteTitle" style="color: #fff; font-weight: 600; font-size: 15px; margin-bottom: 5px;"></div>
            <div id="modalDeleteDate" style="color: var(--accent-2); font-size: 13px;"></div>
        </div>

        <div id="deleteProgressContainer" style="display:none; margin-bottom: 25px;">
            <div style="color: #ef4444; font-size: 13px; font-weight: 600; margin-bottom: 8px; letter-spacing: 1px; text-transform: uppercase;">Siliniyor...</div>
            <div style="width: 100%; height: 6px; background: rgba(255,255,255,0.05); border-radius: 10px; overflow: hidden;">
                <div id="deleteProgressBar" style="width: 0%; height: 100%; background: linear-gradient(90deg, #ef4444, #b91c1c); transition: width 0.3s ease;"></div>
            </div>
        </div>

        <div id="deleteModalButtons" style="display:flex; justify-content:center; gap:15px;">
            <button class="btn-secondary" onclick="closeDeleteModal()" style="flex: 1;">Vazgeç</button>
            <button class="btn-primary" onclick="executeDelete()" style="flex: 1; background: linear-gradient(135deg, #ef4444, #b91c1c); box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);">
                <i class="fa-solid fa-trash"></i> Evet, Sil
            </button>
        </div>

        <input type="hidden" id="deleteReservationId" />
    </div>
</div>

<style>
    .status-pill {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

        .status-active::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #10b981;
            border-radius: 50%;
            box-shadow: 0 0 10px #10b981;
        }

    .status-draft {
        background: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
    }

        .status-draft::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #f59e0b;
            border-radius: 50%;
        }

    .action-icon {
        width: 38px;
        height: 38px;
        border-radius: 10px;
        background: rgba(255,255,255,0.03);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--muted);
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid var(--glass-border);
    }

        .action-icon:hover {
            background: var(--gradient-primary);
            color: #fff;
            transform: translateY(-3px);
            box-shadow: var(--shadow-glow);
        }

    .table-row-hover:hover {
        background: rgba(255,255,255,0.02);
    }

    .disabled-btn {
        opacity: 0.3;
        pointer-events: none;
    }

    .active-page {
        background: rgba(139, 92, 246, 0.1) !important;
        font-weight: 700;
    }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
        z-index: 9999;
    }

        .modal-overlay.active {
            display: flex !important;
        }

            .modal-overlay.active .modal-box {
                transform: scale(1) !important;
                opacity: 1 !important;
            }

    .row-deleting {
        animation: fadeOutRow 0.5s forwards;
    }

    @@keyframes fadeOutRow {
        0% {
            opacity: 1;
            transform: translateX(0);
            background: rgba(239, 68, 68, 0.1);
        }

        100% {
            opacity: 0;
            transform: translateX(-20px);
            height: 0;
            padding: 0;
            border: none;
        }
    }
</style>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        const modalBox = deleteModal.querySelector('.modal-box');
        const titleEl = document.getElementById('modalDeleteTitle');
        const dateEl = document.getElementById('modalDeleteDate');
        const idInput = document.getElementById('deleteReservationId');
        const progressContainer = document.getElementById('deleteProgressContainer');
        const progressBar = document.getElementById('deleteProgressBar');
        const buttonsContainer = document.getElementById('deleteModalButtons');

        function openDeleteModal(id, fullName, dateTime) {
            idInput.value = id;
            titleEl.innerHTML = `<i class="fa-solid fa-user me-2"></i> ${fullName}`;
            dateEl.innerHTML = `<i class="fa-regular fa-clock me-1"></i> ${dateTime}`;

            progressContainer.style.display = 'none';
            progressBar.style.width = '0%';
            buttonsContainer.style.display = 'flex';

            deleteModal.style.display = 'flex';
            setTimeout(() => deleteModal.classList.add('active'), 10);
        }

        function closeDeleteModal() {
            modalBox.style.transform = 'scale(0.9)';
            modalBox.style.opacity = '0';
            setTimeout(() => {
                deleteModal.classList.remove('active');
                deleteModal.style.display = 'none';
            }, 300);
        }

        function executeDelete() {
            const id = idInput.value;
            buttonsContainer.style.display = 'none';
            progressContainer.style.display = 'block';

            let progress = 0;
            const interval = setInterval(() => {
                progress += Math.floor(Math.random() * 15) + 5;
                if (progress > 90) progress = 90;
                progressBar.style.width = progress + '%';
            }, 300);

            $.ajax({
                url: '/Admin/Reservations/Delete',
                type: 'POST',
                data: { id: id },
                success: function (result) {
                    clearInterval(interval);
                    if (result.success) {
                        progressBar.style.width = '100%';
                        setTimeout(() => {
                            closeDeleteModal();
                            const row = document.getElementById('row-' + id);
                            if (row) {
                                row.classList.add('row-deleting');
                                setTimeout(() => row.remove(), 500);
                            }
                        }, 500);
                    } else {
                        alert(result.message);
                        closeDeleteModal();
                    }
                },
                error: function () {
                    clearInterval(interval);
                    alert('Sunucu ile iletişim kurulamadı.');
                    closeDeleteModal();
                }
            });
        }
    </script>
}